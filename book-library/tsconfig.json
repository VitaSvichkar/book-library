{
  "compilerOptions": {
    "target": "es2020",
    "module": "es2020",
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["src", "vite-env.d.ts"],
  "exclude": ["dist"]
}
